<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_application"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/volume" />

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/volume"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_reset"
            android:onClick="resetApplication" />

    </RelativeLayout>

    <Button
        android:id="@+id/practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:background="@drawable/button_practice"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/practice"
        android:layout_alignLeft="@+id/practice"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_learn"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/practice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_play"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30sp"
        android:typeface="serif" />

</RelativeLayout><!-- From: file:/C:/Users/ChaudhryUmar/Downloads/Android-LensRocket-master/GuessShape1/app/src/main/res/layout/activity_main.xml -->